<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button VerticalAlignment="Top" Content="更新" Height="30" Click="Button_Click" />
            <Button VerticalAlignment="Top" Content="更新大小" Height="30" Click="Button_Size_Click" />
            <Button VerticalAlignment="Top" Content="停止播放" Height="30" Click="Button_Click_1"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Top">
            <TextBox Name="widthTextBox" Width="100" Height="40"/>
            <TextBox Name="heightTextBox" Width="100" Height="40"/>
        </StackPanel>
        
    </Grid>
</Window>
